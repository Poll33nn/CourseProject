<Page x:Class="Forestry.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="AuthPage">

    <StackPanel Orientation="Vertical">
        <Label Content="Авторизация" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"/>

        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Content="Логин: " Margin="0 0 5.6 0"/>
            <TextBox x:Name="LoginTextBox" Text="admin" Width="150"/>
        </StackPanel>
        
        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Content="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Password="admin" Width="150"/>
        </StackPanel>
        <Button x:Name="LoginButton" Content="Войти" Width="218" Click="LoginButton_Click"/>
    </StackPanel>
</Page>
