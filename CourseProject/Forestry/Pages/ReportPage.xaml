<Page x:Class="Forestry.Pages.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">

    <DockPanel>
        <Label Content="Экспорт мероприятий на лесных участках" FontSize="20" FontWeight="Bold" Margin="10 0 0 5" DockPanel.Dock="Top"/>
        <StackPanel Margin="15 0 0 0" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <CheckBox x:Name="ReportAllForestryEvents" Content="Экспортировать мероприятия со всего лесничества" VerticalContentAlignment="Center" FontSize="16" Margin="5 0 0 10" Checked="ReportAllForestryEvents_Checked"/>
            <CheckBox x:Name="ReportForestPlotEvents" Content="Экспортировать мероприятия с одного лесного участка" VerticalContentAlignment="Center" FontSize="16" Margin="5 0 0 10" Checked="ReportForestPlotEvents_Checked"/>
            <StackPanel x:Name="PlotIdStackPanel" Orientation="Horizontal" Visibility="Collapsed" HorizontalAlignment="Left">
                <Label Content="Выберите номер участка: "/>
                <ComboBox x:Name="ForestPlotIdComboBox" DisplayMemberPath="PlotId" Width="50" Height="25" SelectionChanged="ForestPlotIdComboBox_SelectionChanged"/>
            </StackPanel>
            <Button x:Name="ExportButton" Content="Экспортировать" Margin="5 10 0 0" HorizontalAlignment="Left" Width="130" Click="ExportButton_Click"/>
        </StackPanel>
        <Button x:Name="BackButton" Content="Назад" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="BackButton_Click"/>
    </DockPanel>
</Page>
