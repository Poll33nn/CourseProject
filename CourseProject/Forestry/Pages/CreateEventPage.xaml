<Page x:Class="Forestry.Pages.CreateEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="CreateEventPage">

    <DockPanel>
        <Label Content="Создание лесохозяйственных мероприятий" Margin="10 0 0 5" FontSize="20" FontWeight="Bold" DockPanel.Dock="Top"/>
        <Label x:Name="PlotIdLabel" Margin="20 0 0 5" DockPanel.Dock="Top"/>


        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <Label Content="Выберите тип мероприятия: " Margin="15 0 7.5 5"/>
            <ComboBox x:Name="EventTypeComboBox" Width="100" Height="25" SelectionChanged="EventTypeComboBox_SelectionChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <Label Content="Описание: " Margin="15 0 0 5"/>
            <TextBox x:Name="DescriptionTextBox" Width="238.5"/>
        </StackPanel>

        <StackPanel x:Name="PlantingPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <Label x:Name="PanelLable" Margin="15 0 0 5"/>
            <ComboBox x:Name="TreeTypeComboBox" Width="75" Height="25"/>

            <Label Content="Количество: " Margin="5 0 0 0"/>
            <TextBox x:Name="TreesNumberTextBox" Width="50"/>
        </StackPanel>

        <Button x:Name="CreateEventButton" Content="Создать" Margin="10 0 0 0" HorizontalAlignment="Left" DockPanel.Dock="Top"/>
        <Button x:Name="BackButton" Content="Назад" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="BackButton_Click"/>
    </DockPanel>
</Page>
