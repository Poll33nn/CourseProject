<Page x:Class="Forestry.Pages.PlotChangePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="PlotChangePage">

    <DockPanel>
        <Label Content="Изменить лесной участок" HorizontalAlignment="Left" Margin="10 0 0 5" FontWeight="Bold" FontSize="20" DockPanel.Dock="Top"/>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <Label Content="Номер участка: " Margin="15 0 0 0"/>
            <TextBox x:Name="PlotNumberTextBox" Width="150" Margin="18 0 0 0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <Label Content="Ответственный: " Margin="15 0 0 5"/>
            <ComboBox x:Name="ResonsibleComboBox" IsEditable="True" IsReadOnly="True" DisplayMemberPath="FullName" Height="25" Width="150" Margin="15.5 0 0 0" Background="#98FB98" VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <Label Content="Квартал: " Margin="15 0 0 5"/>
            <TextBox x:Name="CompartmentTextBox" Width="75"/>

            <Label Content="Выдел: " Margin="5 0 0 5"/>
            <TextBox x:Name="SubcompartmentTextBox" Width="75"/>
        </StackPanel>

        <Button x:Name="ChangePlotButton" Content="Изменить" Width="100" HorizontalAlignment="Left" Margin="10" DockPanel.Dock="Top" Click="ChangePlotButton_Click"/>
        <Button x:Name="BackButton" Content="Назад" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="BackButton_Click"/>
    </DockPanel>
</Page>
