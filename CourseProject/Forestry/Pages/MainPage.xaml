<Page x:Class="Forestry.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="MainPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Поиск: " Margin="20 0 0 0"/>
            <TextBox x:Name="SearchTextBox" Width="150" TextChanged="SearchTextBox_TextChanged"/>
            <Button x:Name="ClearButton" Content="Очистить" Click="ClearButton_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="{Binding Source={x:Static Application.Current}, Path= UserFullName}" VerticalAlignment="Center"/>
            <ToggleButton x:Name="UserProfilButton" Background="#2E8B57" Margin="5 0 17 0" Height="50" Width="50">
                <Image Source="/Icons/person_icon.png"/>
            </ToggleButton>

            <Popup IsOpen="{Binding IsChecked, ElementName=UserProfilButton}"
            PlacementTarget="{Binding ElementName=UserProfilButton}"
            Placement="Bottom"
            StaysOpen="False"
            HorizontalOffset="-82"
            VerticalOffset="1"
            x:Name="UserPopUp">
                <Border Background="#F5F5F5" BorderBrush="Black" BorderThickness="1" CornerRadius="2">
                    <StackPanel>
                        <Button x:Name="ReportButton" Content="Экспорт" Width="120" Visibility="Collapsed" Click="ReportButton_Click"/>
                        <Button x:Name="UserButton" Content="Пользователи" Width="120" Visibility="Collapsed" Click="UserButton_Click"/>
                        <Separator x:Name="PopUpSeparator" Visibility="Collapsed" Margin="0 5"/>
                        <Button x:Name="LogoutButton" Content="Выйти" Width="120" Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>
            </Popup>
        </StackPanel>

        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Row="1">
            <ScrollViewer  MaxHeight="400">
                <ItemsControl x:Name="ForestPlotsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5"
                                BorderBrush="#2E8B57"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="500"/>
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="15 5 0 5">
                                        <TextBlock Text="{Binding PlotId, StringFormat='Лесной участок № {0}'}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="{Binding Responsible, StringFormat='Ответсвтенный: {0}'}" Margin="20 0 0 5" FontSize="14"/>
                                        <TextBlock Margin="20 0 0 5" FontSize="14">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Коношский район, п. Коноша Квартал: {0} Выдел: {1}">
                                                    <Binding Path="Compartment" />
                                                    <Binding Path="Subcompartment" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1" Margin="8">
                                        <Button Content="Информация"
                                            Width="125"
                                            Tag="{Binding}" 
                                            Click="OnInfoClick"/>
                                        <Button Content="Изменить"
                                            Width="125"
                                            Tag="{Binding}"
                                            Click="OnEditClick"/>
                                        <Button Content="Удалить"
                                            Width="125"
                                            Tag="{Binding}" 
                                            Click="OnDeleteClick"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <Button x:Name="CreatePlotButton" Content="Создать лесной участок" Width="200" Grid.Row="2" Margin="0,0,10,0" HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Click="CreatePlotButton_Click"/>
    </Grid>
</Page>
