<Page x:Class="Forestry.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Поиск: " Margin="10 0 0 0"/>
            <TextBox x:Name="SearchTextBox" Width="150"/>
            <Button x:Name="ClearButton" Content="Очистить"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Фамилия Имя Отчество" VerticalAlignment="Center"/>
            <Button x:Name="UserProfilButton" Margin="5 0 10 0" Height="50" Width="50">
                <Image Source="/Icons/person_icon.png"/>
            </Button>
        </StackPanel>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Row="1">
            <ScrollViewer  MaxHeight="535">
                <ItemsControl x:Name="ForestPlotsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5"
                                BorderBrush="#2E8B57"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="5">
                                <Grid>
                                    
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="500"/>
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15 5 0 5">
                                        <TextBlock Text="{Binding Number, StringFormat='Лесной участок № {0}'}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="{Binding Responsible, StringFormat='Ответсвтенный: {0}'}" Margin="20 0 0 5" FontSize="14"/>
                                        <TextBlock Text="{Binding Address, StringFormat='Квартал: {0}'}" Margin="20 0 0 5" FontSize="14"/>
                                    </StackPanel>

                                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1" Margin="8">
                                        <Button Content="Информация"
                                            Width="125"
                                            Tag="{Binding}" 
                                            Click="OnInfoClick"/>
                                        <Button Content="Изменить"
                                            Width="125"
                                            Tag="{Binding}"
                                            Click="OnEditClick"/>
                                        <Button Content="Удалить"
                                            Width="125"
                                            Tag="{Binding}" 
                                            Click="OnDeleteClick"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <Button x:Name="CreatePlotButton" Content="Создать лесной участок" Width="200" Grid.Row="2" Margin="0 0 10 10" HorizontalAlignment="Right"/>
    </Grid>
</Page>
