<Page x:Class="Forestry.Pages.CreatePlotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePlotPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <Label Content="Создание лесного участка" HorizontalAlignment="Left" Margin="10 0 0 5" FontWeight="Bold" FontSize="20" DockPanel.Dock="Top"/>

            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
                <Label Content="Номер участка: " Margin="15 0 0 0"/>
                <TextBox x:Name="PlotNumberTextBox" Width="190" Margin="18 0 0 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
                <Label Content="Ответственный: " Margin="15 0 0 5"/>
                <ComboBox x:Name="UserComboBox" Height="25" Width="190" Margin="15.5 0 0 0" Background="#98FB98" VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
                <Label Content="Квартал: " Margin="15 0 25 5"/>
                <TextBox x:Name="CompartmentTextBox" Width="75"/>

                <Label Content="Выдел: " Margin="5 0 14.3 5"/>
                <TextBox x:Name="SubcompartmentTextBox" Width="75"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
                <Label Content="Тип дерева: " Margin="15 0 0 5"/>
                <ComboBox x:Name="TreeTypeComboBox" Width="75" Height="25"/>

                <Label Content="Количество: " Margin="5 0 0 0"/>
                <TextBox x:Name="TreesNumberTextBox" Width="50"/>
                <Button x:Name="AddTreeButton" Content="+" Width="25" Click="AddTreeButton_Click"/>
            </StackPanel>

            <Button x:Name="ChangePlotButton" Content="Создать" Width="100" HorizontalAlignment="Left" Margin="10" DockPanel.Dock="Top"/>
            <Button x:Name="BackButton" Content="Назад" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="BackButton_Click"/>
        </DockPanel>

        <ListBox x:Name="TreesNumberListBox" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
    </Grid>
</Page>
