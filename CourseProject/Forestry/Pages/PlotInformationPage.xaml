<Page x:Class="Forestry.Pages.PlotInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forestry.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="PlotInformationPage">

    <DockPanel>
        <Label x:Name="NumberLabel" Margin="10 0 0 5" FontSize="20" FontWeight="Bold" DockPanel.Dock="Top"/>
        <Label x:Name="OtvLabel" Margin="20 0 0 5" DockPanel.Dock="Top"/>
        <Label x:Name="AddressLabel" Margin="20 0 0 5" DockPanel.Dock="Top"/>

        <StackPanel Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <Label Content="Состав участка:" Margin="15 0 0 5"/>
            <DataGrid x:Name="TreesDataGrid" FontSize="16" Margin="35 0 0 5" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Породы" Binding="{Binding Path=Name}"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Path=Amount}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

                <Button x:Name="CreateEventButton" Content="Создать мероприятие" Margin="10" Width="200" HorizontalAlignment="Left" DockPanel.Dock="Top" Click="CreateEventButton_Click"/>
        <Button x:Name="BackButton" Content="Назад" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="BackButton_Click"/>
    </DockPanel>
</Page>
